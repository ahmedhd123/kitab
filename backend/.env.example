# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# Default local MongoDB
MONGODB_URI=mongodb://localhost:27017/kitabi

# Alternative MongoDB configurations:
# For network access (replace with your actual IP):
# MONGODB_URI=mongodb://192.168.1.100:27017/kitabi
# 
# For MongoDB with authentication:
# MONGODB_URI=mongodb://username:password@localhost:27017/kitabi
#
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kitabi?retryWrites=true&w=majority
#
# For replica set:
# MONGODB_URI=mongodb://host1:27017,host2:27017/kitabi?replicaSet=myReplicaSet

REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# AI Services Configuration
AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=your-openai-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Social Features
ENABLE_SOCIAL_LOGIN=true
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External APIs
GOOGLE_BOOKS_API_KEY=your-google-books-api-key
GOODREADS_API_KEY=your-goodreads-api-key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Analytics
ENABLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=your-analytics-id
