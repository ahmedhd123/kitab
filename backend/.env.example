# =============================================================================
# KITABI BACKEND ENVIRONMENT CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Atlas Cloud Database (Recommended for Production)
# Get your connection string from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kitabi?retryWrites=true&w=majority

# Alternative Database Configurations:
# Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/kitabi
# 
# MongoDB with authentication
# MONGODB_URI=mongodb://username:password@localhost:27017/kitabi
#
# MongoDB Replica Set
# MONGODB_URI=mongodb://host1:27017,host2:27017/kitabi?replicaSet=myReplicaSet

# Database Options
USE_DATABASE=true
DB_MAX_POOL_SIZE=10
DB_SERVER_SELECTION_TIMEOUT=5000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration - CHANGE IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRE=7d
JWT_ALGORITHM=HS256

# Password Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# =============================================================================
# CLIENT & CORS CONFIGURATION
# =============================================================================

# Frontend URL (for CORS and redirects)
CLIENT_URL=http://localhost:3000

# Additional allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://kitabi.vercel.app

# =============================================================================
# VERCEL DEPLOYMENT CONFIGURATION
# =============================================================================

# Vercel Frontend URL
VERCEL_FRONTEND_URL=https://kitabi.vercel.app

# Vercel Backend URL
VERCEL_BACKEND_URL=https://kitabi-backend.vercel.app

# Vercel Environment
VERCEL_ENV=development

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=noreply@kitabi.app

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
ENABLE_AI_FEATURES=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,epub,txt
ENABLE_FILE_UPLOAD=true

# =============================================================================
# SOCIAL LOGIN CONFIGURATION
# =============================================================================

ENABLE_SOCIAL_LOGIN=false
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# =============================================================================
# EXTERNAL APIs
# =============================================================================

GOOGLE_BOOKS_API_KEY=your-google-books-api-key
GOODREADS_API_KEY=your-goodreads-api-key
OPENLIBRARY_API_URL=https://openlibrary.org/api

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

ENABLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=your-analytics-id
ENABLE_LOGGING=true
LOG_LEVEL=info

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_HEALTH_CHECKS=true

# =============================================================================
# FEATURES FLAGS
# =============================================================================

ENABLE_NOTIFICATIONS=true
ENABLE_REAL_TIME_FEATURES=true
ENABLE_SEARCH=true
ENABLE_RECOMMENDATIONS=true
ENABLE_ADMIN_PANEL=true

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================

# Enable development features
ENABLE_DEV_LOGS=true
ENABLE_CORS_LOGGING=false
ENABLE_REQUEST_LOGGING=true
