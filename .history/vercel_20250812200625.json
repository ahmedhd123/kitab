{
  "version": 2,
  "name": "kitabi-frontend",
  "builds": [
    {
      "src": "web-app/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "web-app/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://kitabi-backend.railway.app/api",
    "NEXT_PUBLIC_APP_NAME": "Kitabi",
    "NEXT_PUBLIC_APP_VERSION": "1.0.0"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "web-app/pages/api/**/*.js": {
      "maxDuration": 10
    }
  }
}
