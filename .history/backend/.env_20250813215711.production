# =============================================================================
# KITABI PRODUCTION ENVIRONMENT - RAILWAY POSTGRESQL
# =============================================================================

NODE_ENV=production
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION - POSTGRESQL (RAILWAY)
# =============================================================================

USE_DATABASE=true
# Railway PostgreSQL - These will be automatically set by Railway
# DATABASE_URL=postgresql://username:password@host:port/database
# POSTGRES_HOST=containers-us-west-xxx.railway.app
# POSTGRES_PORT=5432
# POSTGRES_DB=railway
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password

# =============================================================================
# CLIENT & CORS CONFIGURATION
# =============================================================================

CLIENT_URL=https://kitab-plum.vercel.app
ALLOWED_ORIGINS=https://kitab-plum.vercel.app,https://kitabi-backend.vercel.app,https://kitab-123fpnqxz-ahmedhd123s-projects.vercel.app,http://localhost:3000

# =============================================================================
# VERCEL DEPLOYMENT URLS
# =============================================================================

VERCEL_FRONTEND_URL=https://kitab-plum.vercel.app
VERCEL_BACKEND_URL=https://kitabi-backend.vercel.app
VERCEL_ENV=production

# =============================================================================
# AUTHENTICATION & SECURITY - PRODUCTION
# =============================================================================

JWT_SECRET=kitabi-super-secret-production-jwt-key-2025-change-this-to-random-string
JWT_EXPIRE=7d
JWT_ALGORITHM=HS256

BCRYPT_ROUNDS=12
SESSION_SECRET=kitabi-session-secret-production-2025-change-this-to-random-string

# =============================================================================
# FEATURES CONFIGURATION
# =============================================================================

ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=true
ENABLE_FILE_UPLOAD=true
ENABLE_NOTIFICATIONS=true
ENABLE_AI_FEATURES=true
ENABLE_SEARCH=true
ENABLE_RECOMMENDATIONS=true
ENABLE_ADMIN_PANEL=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,epub,txt

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@kitabi.app

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

AI_SERVICE_URL=http://localhost:8000
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

GOOGLE_BOOKS_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://kitabi-backend.vercel.app/api/auth/google/callback

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

ENABLE_LOGGING=true
LOG_LEVEL=info
ENABLE_ANALYTICS=true
GOOGLE_ANALYTICS_ID=

# =============================================================================
# RATE LIMITING - PRODUCTION
# =============================================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_HEALTH_CHECKS=true

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

REDIS_URL=
REDIS_PASSWORD=
REDIS_DB=0

# Redis (for caching and sessions - optional)
REDIS_URL=

# Rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
